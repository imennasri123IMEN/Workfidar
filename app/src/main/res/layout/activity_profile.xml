<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".ProfileActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/profileLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="50dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!--Partie Image Profile and Cover-->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            >
                            <!--Cover photo-->
                            <ImageView
                                android:id="@+id/imageViewCover"
                                android:layout_width="match_parent"
                                android:layout_height="195dp"
                                android:background="#e2e2e2"
                                android:scaleType="fitXY" />
                            <!--android:layout_height="185dp"-->


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_marginTop="50dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/imageViewImageProfile"
                                    android:layout_width="100dp"
                                    android:layout_height="400dp"

                                    android:src="@drawable/cam"
                                    />

                                <!--android:background="#f26522"-->

                                <TextView
                                    android:id="@+id/textViewNomEtPrenom"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Nom et prénom"
                                    android:layout_margin="10dp"
                                    android:textSize="18sp"
                                    android:textColor="#000"
                                    />
                            </LinearLayout>

                        </RelativeLayout>


                        <!--Partie Coordonnées-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="0dp">

                            <!--<LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginLeft="30dp">
                                <ImageView
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:src="@drawable/ic_baseline_account_box_24"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Nom"
                                    android:textSize="20sp"
                                    android:id="@+id/firstname"
                                    android:textColor="@color/black"
                                    android:layout_gravity="center_vertical"
                                    android:paddingLeft="25dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="30dp">
                                <ImageView
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:src="@drawable/ic_baseline_account_box_24"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Prénom"
                                    android:textSize="20sp"
                                    android:id="@+id/lastname"
                                    android:textColor="@color/black"
                                    android:layout_gravity="center_vertical"
                                    android:paddingLeft="25dp"/>

                            </LinearLayout>-->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="30dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:src="@drawable/mail"
                                    />
                                <TextView
                                    android:id="@+id/textViewEmail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Email"
                                    android:textSize="20sp"
                                    android:textColor="@color/black"
                                    android:layout_gravity="center_vertical"
                                    android:paddingLeft="25dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="30dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:src="@drawable/phone"
                                    />

                                <TextView
                                    android:id="@+id/textViewTelephone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Téléphone"
                                    android:textSize="20sp"
                                    android:textColor="@color/black"
                                    android:layout_gravity="center_vertical"
                                    android:paddingLeft="25dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="30dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:src="@drawable/identite"
                                    />

                                <TextView
                                    android:id="@+id/textViewCin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Carte d'identité"
                                    android:textSize="20sp"
                                    android:textColor="@color/black"
                                    android:layout_gravity="center_vertical"
                                    android:paddingLeft="25dp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/matriculeLinearLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="30dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:src="@drawable/matricule"
                                    />

                                <TextView
                                    android:id="@+id/textViewMatricule"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Matricule"
                                    android:textSize="20sp"
                                    android:textColor="@color/black"
                                    android:layout_gravity="center_vertical"
                                    android:paddingLeft="25dp"/>
                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="30dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="36dp"
                                    android:layout_height="36dp"
                                    android:src="@drawable/naissance"
                                    />

                                <TextView
                                    android:id="@+id/textViewDateDeNaissance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Date de naissance"
                                    android:textSize="20sp"
                                    android:textColor="@color/black"
                                    android:layout_gravity="center_vertical"
                                    android:paddingLeft="25dp"/>
                            </LinearLayout>


                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/buttonLogout"
                                android:layout_marginTop="30dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Se déconnecter"
                                android:background="@drawable/button"
                                android:textColor="#FFFFFF"
                                android:layout_gravity="center"
                                android:gravity="center"
                                />

                            <!--android:background="@color/color1"-->


                        </LinearLayout>
                        <!--Fin Partie Coordonnées-->



                    </LinearLayout>
                </ScrollView>


                <!--Floating action button-->
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"

                    android:layout_marginBottom="100dp"
                    android:src="@drawable/ic_baseline_edit_24"
                    app:backgroundTint="#0052CC" />

                <!--app:backgroundTint="#f26522"-->



            </RelativeLayout>

        </LinearLayout>





        <LinearLayout
            android:id="@+id/loginAcceuilLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonLogin"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Se connecter"
                android:background="@drawable/button"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonRegister"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="S'inscrire"
                android:background="@drawable/button"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                />
        </LinearLayout>

        <!--<include
            android:id="@+id/navigation"
            layout="@layout/element_bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />-->

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/bottom_navigation_menu1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:itemIconTint="@color/black"
            app:itemTextColor="@color/black"
            app:labelVisibilityMode="labeled"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>