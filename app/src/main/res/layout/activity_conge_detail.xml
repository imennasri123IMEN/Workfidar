<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CongeDetailActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Détail du congé"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                />


            <LinearLayout
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_account_box_24"
                    />

                <TextView
                    android:id="@+id/Nom"
                    android:layout_marginStart="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nom:"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/nomTextView"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_marginTop="10dp"
                android:layout_marginStart="35dp"
                android:hint="Ben Foulen"/>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_account_box_24"
                    />

                <TextView
                    android:id="@+id/prenom"
                    android:layout_marginStart="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Prénom:"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/prenomTextView"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_marginTop="10dp"
                android:layout_marginStart="35dp"
                android:hint="Foulen"/>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_event_note_24"
                    />
                <TextView
                    android:id="@+id/editnbjours"
                    android:layout_marginStart="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="nombre de jours demandé:"
                    android:inputType="number"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/editnbjoursTextView"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_marginTop="10dp"
                android:layout_marginStart="35dp"
                android:hint="20 jours"/>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_calendar_today_24"
                    />
                <TextView
                    android:id="@+id/dateDeDébut"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Date de début du congé:"/>
            </LinearLayout>
            <TextView
                android:id="@+id/dateDeDébutTextView"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_marginTop="10dp"
                android:layout_marginStart="35dp"
                android:hint="27-04-2020"/>


            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_calendar_today_24"
                    />
                <TextView
                    android:id="@+id/dateDeFin"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Date de fin du congé:"/>
            </LinearLayout>
            <TextView
                android:id="@+id/dateDeFinTextView"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_marginTop="10dp"
                android:layout_marginStart="35dp"
                android:hint="27-04-2020"/>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_aod_24"
                    />
                <TextView
                    android:id="@+id/cause"
                    android:layout_marginStart="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cause du congé:"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/causeTextView"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_marginTop="10dp"
                android:layout_marginStart="35dp"
                android:hint="Maladie"/>



            <LinearLayout
                android:id="@+id/statusCongeLinearLayout"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                >

                <ImageView
                    android:id="@+id/statusCongeApprouveImageView"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_check_circle_24"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/statusCongeRejeteImageView"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_clear_24"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/statusConge"
                    android:layout_marginStart="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Status Congé:"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/statusCongeTextView"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_marginTop="10dp"
                android:layout_marginStart="35dp"
                android:hint="Approuvé"
                android:visibility="gone"/>



            <LinearLayout
                android:id="@+id/approuverRejeterLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:visibility="visible">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/approuverButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approuver"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/button"
                android:textColor="#FFFFFF"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/rejecterButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rejeter"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:background="@drawable/button1"
                android:textColor="#ef4737"
                />

            </LinearLayout>




        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>